---
layout: nil
title : RSS Feed
---

<?xml version="1.0" encoding="UTF-8" ?>
<rss version="2.0">
<channel>
        <title>{{ title }}</title>
        <description>{{ title }} - {{ author.name }}</description>
        <link>{{ production_url }}{{ rss_path }}</link>
        <link>{{ production_url }}</link>
        <lastBuildDate>{{ time | date_to_xmlschema }}</lastBuildDate>
        <pubDate>{{ time | date_to_xmlschema }}</pubDate>
        <ttl>1800</ttl>

{% for post in posts %}
        <item>
                <title>{{ post.title }}</title>
                <description>{{ post.content | xml_escape }}</description>
                <link>{{ production_url }}{{ post.url }}</link>
                <guid>{{ production_url }}{{ post.id }}</guid>
                <pubDate>{{ post.date | date_to_xmlschema }}</pubDate>
        </item>
{% endfor %}

</channel>
</rss>
